{% extends 'base.html.twig' %}

{% block title %}Hello WM!{% endblock %}

{% block body %}
    {% include('inc/navbarWM.html.twig') %}
    <script src="{{ asset('js/change_progress_bar_class.js') }}"></script>
    <script src="{{ asset('js/delete_wm.js') }}"></script>
    <script src="{{ asset('js/delete_category.js') }}"></script>


    <div class="column left">
        {% if categories %}
        <table id="categories">
            <thead>
            <a class="h3 category-main" href="/wishmap">Categories:</a>
            <a class="btn btn-primary" href="/wishmap/category/create">Create</a>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>
                        <a class="h5 category" href="/wishmap/category/{{ category.id }}">{{ category.name }}</a>
                        <a class="btn btn-danger delete-category" data-id="{{ category.id }}">Delete</a>
                        <a class="btn btn-danger" href="/wishmap/category/update/{{ category.id }}">Update</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}

    {% if wishmaps %}
        <div class="row column right" id="card">
            {% for wishmap in wishmaps %}
                <div class="col-3">
                    <div class="card" id="card-body">
                        <div class="card-body">
                            {% if wishmap.image %}
                                <img class="card-img-top" style="max-width: 100%; height: auto"
                                     src="{{ asset('uploads/wish_map_images/' ~ wishmap.image) }}"
                                     alt="Card image cap">
                            {% endif %}

                            {% if wishmap.category_id %}
                                {% for category in categories %}
                                    {% if category.id == wishmap.category_id %}
                                        <p class="card-text category">{{ category.name }}</p>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}

                            <div class="progress">
                                <div id="progress-bar" role="progressbar"
                                     style="width: {{ wishmap.process }}%;" aria-valuenow="{{ wishmap.process }}"
                                     aria-valuemin="0" aria-valuemax="100">
                                    <span>{{ wishmap.process }}%</span>
                                </div>
                            </div>
                            <p class="card-text description">{{ wishmap.description }}</p>
                            <div class="row">
                                {% if (wishmap.startDate) %}
                                    <label>Start date:</label>
                                    <p class="card-text"
                                       style="margin-left:10px ">{{ wishmap.startDate|date('d-m-Y')|e }}</p>
                                {% endif %}
                                <label style="margin-left:10px ">Finish date:</label>
                                <p class="card-text"
                                   style="margin-left:10px ">{{ wishmap.finishDate|date('d-m-Y') }} </p>
                            </div>
                        </div>
                        <a class="btn btn-primary margin" href="/wishmap/update/{{ wishmap.id }}">Update</a>
                        <a class="btn btn-danger margin" id="delete-wishmap" data-id="{{ wishmap.id }}">Delete</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% else %}
        <p>You have no WISHES!</p>
    {% endif %}

    <div class="someclass">{{ knp_pagination_render(wishmaps) }}</div>

{% endblock %}